# Mahoraga Triage Engine Environment Configuration
# Copy this file to .env and fill in your actual values

# Database
DATABASE_URL=sqlite:///./mahoraga.db

# GitHub Integration
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here

# Slack Integration  
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token-here

# AI Analysis
GEMINI_API_KEY=your_gemini_api_key_here

# System Configuration (optional - defaults provided)
CONFIDENCE_THRESHOLD=60.0
DRAFT_PR_ENABLED=true
DUPLICATE_DETECTION_WINDOW_MINUTES=10

# Performance Settings (optional - defaults provided)
WEBHOOK_TIMEOUT_SECONDS=30
GIT_BLAME_TIMEOUT_SECONDS=5
AI_ANALYSIS_TIMEOUT_SECONDS=30